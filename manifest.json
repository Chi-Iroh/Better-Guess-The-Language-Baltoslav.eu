{
    "manifest_version": 2,
    "name": "Better Guess The Language - Baltoslav.eu",
    "version": "1.0",

    "homepage_url": "https://github.com/Chi-Iroh/Better-Guess-The-Language-Baltoslav.eu",
    "description": "Adds many game modes and useful information on baltoslav.eu's 'Guess The Language' game.",
    "icons": {
        "48": "icons/icon48.png"
    },

    "content_scripts": [
        {
            "matches": [
                "http://baltoslav.eu/adhadaj/*",
                "https://baltoslav.eu/adhadaj/*"
            ],
            "js": ["languages.js", "content.js"]
        }
    ],

    "options_ui": {
        "page": "settings.html"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "permissions": ["storage"],

    "browser_specific_settings": {
        "gecko": {
            "id": "addon@example.com"
        }
    }
}
